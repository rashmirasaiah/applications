
DROP TABLE ACCOUNT;

CREATE TABLE  USER
   (	
    USERID INT AUTO_INCREMENT, 
	USERNAME VARCHAR(100), 
	PASSWORD VARCHAR(100), 	
	ADDRESS VARCHAR(100), 
	PHONE VARCHAR(100), 
    PRIMARY KEY (USERID)
    );

CREATE TABLE  ACCOUNT
   (	
    USERID INT, 
	ACCOUNTNUM VARCHAR(100), 
	ACCOUNTBAL VARCHAR(100),	
    PRIMARY KEY (USERID,ACCOUNTNUM)
    );

CREATE TABLE AUDIT
   (	
	ACCOUNTNUM VARCHAR(100), 
	OPERATION VARCHAR(100),	
    AMOUNT VARCHAR(100),
    CREATEDON DATETIME
    );
